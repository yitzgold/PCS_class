<!DOCTYPE html>
<html lang="en">

{{#posts}}
<div id="{{_id}}">
    <h2>{{title}}</h2>
    <h3>by {{author}} at {{date}}</h3>
    <div>{{content}}</div>
    <h3>Comments</h3>
    <a href="/add-comment/{{_id}}">Add Comment</a>
    {{#comments}}
    <h4>By {{author}} at {{date}}</h4>
    <p>{{content}}</p>
    {{/comments}}
</div>
{{/posts}}